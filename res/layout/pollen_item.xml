<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_vertical"
	
	android:background="@drawable/bg_level"
	>

	<org.francho.apps.zgzpolen.widget.PollenImage
		android:id="@+id/item_image" android:layout_width="0dip"
		android:layout_height="wrap_content" 
		
		android:layout_weight="1" />

	<TextView android:id="@+id/item_name" android:layout_width="0dip"
		android:layout_height="wrap_content" android:text="TextView" 
		android:layout_toRightOf="@id/item_image"
		
		android:layout_weight="2"
		
		
		android:gravity="center"
		/>
		
	<TextView android:id="@+id/item_level" android:layout_width="0dip"
		android:layout_height="wrap_content" android:text="TextView"
		android:layout_alignLeft="@id/item_image"
		android:layout_below="@id/item_image"
		
		android:gravity="right"
		
		android:layout_weight="1"
		 />

</LinearLayout>
