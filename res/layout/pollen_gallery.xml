<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="@dimen/gallery_height" android:gravity="center_vertical">
	<Gallery android:id="@android:id/list" android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		
		android:unselectedAlpha="0.6"
		android:spacing="3dip"
		
		android:cacheColorHint="@android:color/transparent"
		/>

	<TextView android:id="@android:id/empty" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:text="@string/empty"/>
</LinearLayout>
